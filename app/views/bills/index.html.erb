<% if flash[:notice] then %>
  <%= flash[:notice] %>
<% end %> 

<div class="site_title">
  State legislative responses to UAVs
</div>

<div class="index_filters"> 
  <div class="state_filter"> States: <%=select("bill","state",Bill.distinct("state").sort(), {include_blank: true}) %> </div>
  <div class="filter_middle_space"> </div>
  <div class="tag_filter"> Tags: <%=select("bill","tag",Bill.distinct("tags.text"), {include_blank: true})%> </div>
</div>

<h2> <%= @all_bills.count %> </h2> <h3> bills </h3>

<div class="bills_list"> 
  <% @all_bills.each do |bill| %>
    <%= render partial: 'index_row', locals: { bill: bill } %>
  <% end %> 
</div>